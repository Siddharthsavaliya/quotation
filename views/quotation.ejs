<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quotation - Ashok Extrusion Tech</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background: #fff;
            padding: 20px;
        }

        .page {
            margin-bottom: 30px;
        }

        .page-break {
            page-break-after: always;
        }

        .logo {
            width: 200px;
            margin-bottom: 20px;
        }

        .quotation-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
        }

        .quotation-title {
            color: #000066;
            font-size: 24px;
            margin-bottom: 10px;
        }

        .quotation-details {
            text-align: right;
        }

        .quotation-to {
            margin-bottom: 20px;
        }

        .subject-line {
            margin-bottom: 20px;
        }

        .annexure-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        .annexure-table td {
            padding: 8px;
            border-bottom: 1px solid #ccc;
        }

        .annexure-table td:last-child {
            text-align: right;
        }

        .blue-header {
            background-color: #000066;
            color: white;
            padding: 10px;
            margin: 20px 0;
        }

        .technical-table,
        .financial-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        .technical-table th,
        .technical-table td,
        .financial-table th,
        .financial-table td {
            border: 1px solid #000;
            padding: 8px;
        }

        .footer {
            margin-top: 30px;
            text-align: center;
            border-top: 2px solid #000066;
            padding-top: 10px;
        }

        .terms-content {
            white-space: pre-wrap;
            line-height: 1.6;
            padding: 20px;
            font-size: 14px;
        }

        .terms-content p {
            margin-bottom: 10px;
        }

        @media print {
            .page-break {
                page-break-after: always;
            }
        }
    </style>
</head>

<body>
    <!-- First Page -->
    <div class="page">
        <img src="https://ashokextrusiontech.com/images/Ashok-blue-web.png" alt="Ashok Extrusion Tech" class="logo">

        <div class="quotation-header">
            <div>
                <h1 class="quotation-title">QUOTATION</h1>
                <p>Quotation No, #<%= formNumber %>
                </p>
                <p>Date, <%= new Date().toLocaleDateString('en-GB', { day: '2-digit' , month: 'short' , year: '2-digit'
                        }) %>
                </p>
            </div>
        </div>

        <div class="quotation-to">
            <h3>QUOTATION TO,</h3>
            <p>
                <%= customer.companyName %>
            </p>
            <p>
                <%= customer.phone %>
            </p>
        </div>

        <div class="subject-line">
            <p>Subject: Technical & Financial Proposal for ___________________</p>
            <p>Dear Sir,</p>
        </div>

        <table class="annexure-table">
            <tr>
                <td>Annexure - 1</td>
                <td>Technical Proposal</td>
                <td>Page. 1</td>
            </tr>
            <tr>
                <td>Annexure - 2</td>
                <td>Financial Proposal</td>
                <td>Page. 2</td>
            </tr>
            <tr>
                <td>Annexure - 3</td>
                <td>Terms & Condition</td>
                <td>Page. 3</td>
            </tr>
        </table>

        <div class="footer">
            <p>Ashok Extrusiontech PVT LTD</p>
            <p>984, Gokul Nagar, Makarpura GIDC, Makarpura, Vadodara, Gujarat 390010</p>
            <p>info@ashokextrusiontech.com - www.ashokextrusiontech.com</p>
        </div>
    </div>

    <!-- Page Break -->
    <div class="page-break"></div>

    <!-- Technical Proposal Page -->
    <div class="page">
        <img src="https://ashokextrusiontech.com/images/Ashok-blue-web.png" alt="Ashok Extrusion Tech" class="logo">

        <div class="blue-header">
            <h2>ANNEXURE - 1</h2>
        </div>

        <h3>Technical Proposal for <%= machines[0].machine.name %>
        </h3>

        <table class="technical-table">
            <tr>
                <th>No.</th>
                <th>Item</th>
                <th>Description</th>
            </tr>
            <% machines[0].fieldValues.forEach((fieldValue, index)=> {
                const field = machines[0].machine.fields.find(f => f._id.toString() === fieldValue.fieldId.toString());
                if (field) { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= field.title %>
                    </td>
                    <td>
                        <%= fieldValue.value %>
                    </td>
                </tr>
                <% }}) %>
        </table>

        <div class="footer">
            <p>Ashok Extrusiontech PVT LTD</p>
            <p>984, Gokul Nagar, Makarpura GIDC, Makarpura, Vadodara, Gujarat 390010</p>
            <p>info@ashokextrusiontech.com - www.ashokextrusiontech.com</p>
        </div>
    </div>

    <!-- Page Break -->
    <div class="page-break"></div>

    <!-- Financial Proposal Page -->
    <div class="page">
        <img src="https://ashokextrusiontech.com/images/Ashok-blue-web.png" alt="Ashok Extrusion Tech" class="logo">

        <div class="blue-header">
            <h2>ANNEXURE - 2</h2>
        </div>

        <h3>Financial Proposal for <%= machines[0].machine.name %>
        </h3>

        <% machines.forEach(machineItem=> { %>
            <table class="financial-table">
                <tr>
                    <td>Machine Name</td>
                    <td>
                        <%= machineItem.machine.name %>
                    </td>
                </tr>
                <tr>
                    <td>Rate</td>
                    <td>₹<%= machineItem.totalPrice.toLocaleString() %>
                    </td>
                </tr>
                <tr>
                    <td>Discount</td>
                    <td>₹<%= machineItem.discount.toLocaleString() %>
                    </td>
                </tr>
                <tr>
                    <td>Total</td>
                    <td>₹<%= machineItem.finalTotal.toLocaleString() %>
                    </td>
                </tr>
            </table>
            <% }) %>

                <div class="footer">
                    <p>Ashok Extrusiontech PVT LTD</p>
                    <p>984, Gokul Nagar, Makarpura GIDC, Makarpura, Vadodara, Gujarat 390010</p>
                    <p>info@ashokextrusiontech.com - www.ashokextrusiontech.com</p>
                </div>
    </div>

    <!-- Page Break -->
    <div class="page-break"></div>

    <!-- Terms & Conditions Page -->
    <div class="page">
        <img src="https://ashokextrusiontech.com/images/Ashok-blue-web.png" alt="Ashok Extrusion Tech" class="logo">

        <div class="blue-header">
            <h2>ANNEXURE - 3 TERMS & CONDITION</h2>
        </div>

        <div class="terms-content">
            <%= terms %>
        </div>

        <div class="footer">
            <p>Ashok Extrusiontech PVT LTD</p>
            <p>984, Gokul Nagar, Makarpura GIDC, Makarpura, Vadodara, Gujarat 390010</p>
            <p>info@ashokextrusiontech.com - www.ashokextrusiontech.com</p>
        </div>
    </div>
</body>

</html>